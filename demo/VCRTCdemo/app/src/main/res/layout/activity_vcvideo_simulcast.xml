<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_vc_video_simulcast_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.testsdk.activities.conference.VCVideoSimulcastActivity">

    <FrameLayout
        android:id="@+id/fl_big_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_name_big"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/shape_text_bg"
        android:text="名字"
        android:textSize="15sp"
        android:textColor="@color/vc_text_color"
        android:maxLength="10"
        android:visibility="invisible"/>

    <include
        android:id="@+id/layout_loading"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        layout="@layout/layout_loading"/>

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_last"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@mipmap/hz_btn_before"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@mipmap/hz_btn_after"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_small_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"/>

    <RelativeLayout
        android:id="@+id/rl_unstick"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_text_bg"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:text="@string/main_screen_lock"
            android:textSize="11sp"
            android:textColor="@color/vc_text_color"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:background="@drawable/shape_blue_bg"
            android:gravity="center"
            android:text="@string/unlock"
            android:textSize="11sp"
            android:textColor="@color/vc_text_color"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_hide_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_hide_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/selector_hide_little_window"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="@string/hide_small_view"
            android:textSize="10dp"
            android:textColor="@color/vc_text_color"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_share_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/hz_bg"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/hz_icon_screen"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="@string/sharing_screen"
                android:textSize="16sp"
                android:textColor="@color/vc_text_color"/>

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/layout_video_bar"/>

</RelativeLayout>