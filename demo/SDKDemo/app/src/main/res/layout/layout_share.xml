<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_popup_bg">

    <TextView
        android:id="@+id/tv_share_picture"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/share_picture"
        android:textSize="14sp"
        android:textColor="@color/vc_text_color"/>

    <View
        android:id="@+id/line1"
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/vc_popup_line"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/share_whiteboard"
        android:textSize="14sp"
        android:textColor="@color/vc_text_color"
        android:visibility="gone"/>

    <View
        android:id="@+id/line2"
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/vc_popup_line"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_share_screen"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/share_screen"
        android:textSize="14sp"
        android:textColor="@color/vc_text_color"/>

    <View
        android:id="@+id/line3"
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/vc_popup_line"/>

    <TextView
        android:id="@+id/tv_share_file"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/share_file"
        android:textSize="14sp"
        android:textColor="@color/vc_text_color"/>
    <View
        android:id="@+id/line4"
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:background="@color/vc_popup_line"/>

    <TextView
        android:id="@+id/tv_share_white_board"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:text="白板"
        android:visibility="gone"
        android:textSize="14sp"
        android:textColor="@color/vc_text_color"/>

</LinearLayout>