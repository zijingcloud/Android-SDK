<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zj_participants_pop_bg">

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="122dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ios_pop_bg">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:gravity="center"
            android:text="信息"
            android:textColor="@color/text_color_333333"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="44dp"
            android:background="@color/color_D9D9D9"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="134.5dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="@string/participants_cancel"
                android:textColor="@color/text_color_828383"
                android:textSize="16sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_D9D9D9"/>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="134.5dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="@string/participants_sure"
                android:textColor="@color/text_color_blue"
                android:textSize="16sp"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>